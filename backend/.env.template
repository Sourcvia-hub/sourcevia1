# ProcureFlix Backend Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# Database Configuration
# ============================================================================
MONGO_URL=mongodb://mongo:27017/procureflix

# ============================================================================
# ProcureFlix Data Backend
# ============================================================================
# Options: "memory" or "sharepoint"
PROCUREFLIX_DATA_BACKEND=memory

# ============================================================================
# SharePoint Integration (Required when DATA_BACKEND=sharepoint)
# ============================================================================
SHAREPOINT_SITE_URL=
SHAREPOINT_TENANT_ID=
SHAREPOINT_CLIENT_ID=
SHAREPOINT_CLIENT_SECRET=

# ============================================================================
# AI Configuration
# ============================================================================
PROCUREFLIX_AI_ENABLED=true
PROCUREFLIX_AI_PROVIDER=openai
PROCUREFLIX_AI_MODEL=gpt-4

# API Keys for AI Providers
# ---------------------------
# Use ONE of the following based on your PROCUREFLIX_AI_PROVIDER:
# 
# For OpenAI (recommended for production):
OPENAI_API_KEY=your-openai-api-key-here
#
# For Emergent LLM (if using emergentintegrations library):
# EMERGENT_LLM_KEY=your-emergent-key-here
#
# For Anthropic Claude:
# ANTHROPIC_API_KEY=your-anthropic-key-here
#
# For Google Gemini:
# GOOGLE_API_KEY=your-google-key-here

# ============================================================================
# CORS Configuration
# ============================================================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:80

# ============================================================================
# Application Settings
# ============================================================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
